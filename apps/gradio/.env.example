# Example environment file for ALFA
# Copy this to .env and fill in your values

# ============================================
# GOOGLE CLOUD CREDENTIALS
# ============================================
GCP_PROJECT_ID=your-project-id-here
GCP_LOCATION=us-central1

# Path to service account JSON (relative to project root)
# Place your JSON file in .credentials/alfa_gcp_sa.json
GOOGLE_APPLICATION_CREDENTIALS=.credentials/alfa_gcp_sa.json

# ============================================
# OPENROUTER API (Optional)
# ============================================
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-key-here

# ============================================
# APPLICATION SETTINGS
# ============================================
# Gradio server settings
GRADIO_SERVER_PORT=7865
GRADIO_SERVER_NAME=127.0.0.1

# Default quality setting (l, m, h, k)
DEFAULT_QUALITY=m

# Default LLM model
DEFAULT_LLM_MODEL=gemini-2.5-flash

# Default TTS model  
DEFAULT_TTS_MODEL=gemini-2.5-flash-tts

# ============================================
# DOCKER SETTINGS
# ============================================
# Use Docker for rendering (recommended)
USE_DOCKER=true

# Docker image name
DOCKER_IMAGE=alfa-manim:latest
